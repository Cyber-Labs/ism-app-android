<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ismapp.iitism.cyberlabs.com.ismapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".HomeActivity.HomeActivity"
            android:theme="@style/AppThemeHome">
        </activity>
        <activity android:name=".Authentication.SignUp.View.SignUpViewImp"
            android:theme="@style/AppThemeHome"/>
        <activity android:name=".Authentication.VerifyOtp.View.VerifyOtpViewImp" />
        <activity android:name=".Authentication.LogIn.View.LoginViewImp"
            android:theme="@style/AppThemeHome">

            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Authentication.forgotPassword.View.forgot_email_view"
            android:theme="@style/AppThemeHome"/>
        <activity android:name=".Authentication.ResetPassword.View.reset_view"
            />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>