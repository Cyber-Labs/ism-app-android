<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/card_club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/club_details_image"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:layout_marginStart="19dp"
        tools:srcCompat="@drawable/cyberlabs"
        android:layout_marginLeft="19dp" />

    <TextView
        android:id="@+id/club_details_tagline"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:padding="1dp"
        android:text="@string/technical_club"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/titleColorLight"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/club_details_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:padding="6dp"
        android:text="@string/club_description"
        android:textSize="14sp" />


</LinearLayout>