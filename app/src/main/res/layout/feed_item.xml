<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D3D3D3"
    android:paddingBottom="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="6dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/feed_thumbnail"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_launcher_background" />

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="2"-->
                <!--android:orientation="vertical">-->

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/feed_thumbnail"
                    android:layout_toRightOf="@+id/feed_thumbnail"
                    android:fontFamily="@font/lato"
                    android:text="Name"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="311dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toEndOf="@+id/feed_thumbnail"
                    android:layout_toRightOf="@+id/feed_thumbnail"
                    android:paddingBottom="1dp"
                    android:text="01/42/32 10:00 PM" />
                <!--</LinearLayout>-->
            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="8dp"
                android:background="#D3D3D3" />

            <TableRow
                android:layout_width="402dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:padding="7dp">

                <RelativeLayout
                    android:layout_width="236dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/feed_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:fontFamily="@font/lato"
                        android:padding="5dp"
                        android:paddingHorizontal="8dp"
                        android:text="Selected List of Candidates"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/short_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/feed_title"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:fontFamily="@font/lato"
                        android:padding="5dp"
                        android:paddingHorizontal="8dp"
                        android:text="This is very interesting news coming up on your channel, get ready for it. Hope you will like it. Blah, Blah"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="167dp"
                    android:layout_height="160dp"
                    android:padding="2dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:src="@color/colorAccent" />

                <!--<TextView-->
                <!--android:id="@+id/textView"-->
                <!--android:layout_width="235dp"-->
                <!--android:layout_height="67dp"-->
                <!--android:fontFamily="@font/lato"-->
                <!--android:padding="5dp"-->
                <!--android:paddingHorizontal="8dp"-->
                <!--android:text="This is very interesting news coming up on your channel, get ready for it. Hope you will like it. Blah, Blah"-->
                <!--android:textSize="14sp"-->
                <!--android:textStyle="bold" />-->
            </TableRow>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>