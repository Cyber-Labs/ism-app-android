<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D3D3D3"
    android:paddingBottom="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="6dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/feed_item_title_ht"
                android:layout_weight="2"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/feed_thumbnail"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_launcher_background" />

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="2"-->
                <!--android:orientation="vertical">-->

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/lato"
                    android:text="@string/feed_item_name"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/layout_margin_horizontal"
                    android:layout_marginRight="@dimen/layout_margin_horizontal"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:text="@string/feed_item_date" />
                <!--</LinearLayout>-->
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/viewBgColor" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/layout_padding">

                <LinearLayout
                    android:layout_width="236dp"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/feed_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:padding="@dimen/tv_padding"
                        android:layout_weight="1"
                        android:text="@string/feed_item_title"
                        android:textColor="@android:color/background_dark"
                        android:textSize="@dimen/title_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/short_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:fontFamily="@font/lato"
                        android:padding="5dp"
                        android:paddingHorizontal="@dimen/padding_horizontal"
                        android:text="@string/feed_item_desc"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="167dp"
                    android:layout_height="160dp"
                    android:padding="@dimen/iv_padding_small"
                    android:src="@color/colorAccent"
                    android:contentDescription="@string/todo" />

                <!--<TextView-->
                <!--android:id="@+id/textView"-->
                <!--android:layout_width="235dp"-->
                <!--android:layout_height="67dp"-->
                <!--android:fontFamily="@font/lato"-->
                <!--android:padding="5dp"-->
                <!--android:paddingHorizontal="8dp"-->
                <!--android:text="This is very interesting news coming up on your channel, get ready for it. Hope you will like it. Blah, Blah"-->
                <!--android:textSize="14sp"-->
                <!--android:textStyle="bold" />-->
            </TableRow>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>