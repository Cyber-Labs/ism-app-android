<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin"
    android:background="@color/viewBgColor"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ibtn_admin_man_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_ripple"
        android:padding="@dimen/iv_padding_small"
        android:scaleType="centerCrop"
        android:src="@drawable/manmembers" />

    <ImageButton
        android:id="@+id/ibtn_admin_man_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_ripple"
        android:cropToPadding="true"
        android:padding="@dimen/iv_padding_small"
        android:scaleType="centerCrop"
        android:src="@drawable/manevents" />

    <ImageButton
        android:id="@+id/ibtn_admin_man_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_ripple"
        android:cropToPadding="true"
        android:padding="@dimen/iv_padding_small"
        android:scaleType="centerCrop"
        android:src="@drawable/manfeed" />


</LinearLayout>