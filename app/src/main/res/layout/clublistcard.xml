                <!--android:gravity="center"-->
                <!--android:orientation="horizontal"-->
                <!--android:text="Follow"-->
                <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1" />-->


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>