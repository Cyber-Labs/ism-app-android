<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="395dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/clubcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/clubimage"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:padding="4dp"
                tools:srcCompat="@drawable/cyberlabs" />

            <TextView
                android:id="@+id/clubname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginEnd="33dp"
                android:layout_toEndOf="@+id/clubimage"
                android:layout_toRightOf="@+id/clubimage"
                android:padding="3dp"
                android:text="CYBERLABS"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginRight="33dp" />

            <TextView
                android:id="@+id/clubtagline"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clubname"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/clubimage"
                android:layout_toRightOf="@+id/clubimage"
                android:padding="1dp"
                android:text="Technical Club"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/grey"
                android:textSize="12sp" />


            <!--<Button-->
                <!--android:id="@+id/verify_otp_buttonnegative"-->
                <!--style="@style/Widget.AppCompat.Button.Borderless.Colored"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignBottom="@+id/clubimage"-->
                <!--android:layout_marginStart="180dp"-->
                <!--android:layout_marginLeft="180dp"-->
                <!--android:layout_marginEnd="6dp"-->
                <!--android:layout_marginRight="6dp"-->

                <!--android:layout_marginBottom="0dp"-->
                <!--android:layout_toEndOf="@+id/clubimage"-->
                <!--android:layout_toRightOf="@+id/clubimage"-->
